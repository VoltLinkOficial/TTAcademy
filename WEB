    <script>
        // Set current year in footer
        document.getElementById('currentYear').textContent = new Date().getFullYear();

        // Modal functionality
        const modal = document.getElementById('registrationModal');
        const registrationForm = document.getElementById('registrationForm');
        const formMessage = document.getElementById('formMessage');

        function showModal() {
            modal.classList.remove('hidden');
        }

        function hideModal() {
            modal.classList.add('hidden');
            formMessage.textContent = ''; // Clear any previous messages
            registrationForm.reset(); // Reset form fields
        }

        registrationForm.addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission
            // Here you would typically send the data to a server
            // For this example, we'll just show a success message
            formMessage.textContent = '¡Gracias por registrarte! Nos pondremos en contacto contigo pronto.';
            formMessage.className = 'mt-4 text-center text-green-600 font-semibold';
            
            // Optionally, hide the modal after a delay
            // setTimeout(hideModal, 3000);
        });

        // Close modal if clicked outside of it
        window.onclick = function(event) {
            if (event.target == modal) {
                hideModal();
            }
